<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <ScrollView
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:id="@+id/initlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/initemtpy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Initiative empty"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/addhero"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:backgroundTint="#009933"
            android:text="+Hero" />

        <Button
            android:id="@+id/addally"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:backgroundTint="#CC9900"
            android:text="+Ally" />

        <Button
            android:id="@+id/deleteselected"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:text="delete selected" />

        <Button
            android:id="@+id/addenemy"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:backgroundTint="#CC0000"
            android:text="+Enemy" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>